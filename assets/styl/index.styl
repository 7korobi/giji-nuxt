@import "./_anime.styl"
@import "./_tooltip.styl"
@import "./_chat.styl"
@import "./_frame.styl"

.page-enter-active,
.page-leave-active
  transition: opacity .5s

.page-enter,
.page-leave-active
  opacity: 0

b
  font-weight: bold

span
  display: inline-block


input[type=color],
input[type=checkbox],
input[type=radio],
input[type=submit],
input[type=button],
input[type=image],
input[type=reset],
[title], [data-tooltip],
a, b, kbd, code, strong,
input, select, button, textarea,
.btn
  display: inline-block
  user-select: none
  box-sizing: border-box
  vertical-align: baseline
  text-decoration: none
  margin:    0   2px
  padding:   2px
  border-radius: 3px
  border-width:  0
  border-style: outset
  align-items: flex-start
  cursor: hand

  text-rendering: auto
  letter-spacing: normal
  word-spacing: normal
  text-transform: none
  text-shadow:    none
  text-indent: 0px

.pull-left
  float: left
.pull-right
  float: right

em
  font-style: normal

kbd
  background-color: black
  color: white
code
  background-color: white
  color: #c00

abbr,
input,
select,
button,
textarea
  user-select: auto
  padding: 4px

label,
rt,
sup,
sub,
kbd,
code
  padding: 0 4px

label,
abbr,
rt,
sup,
sub
  border-radius: 3em
  padding: 1px 6px
  font-weight: bold
  text-align: center

h1, h2, h3, h4, h5, h6, .chat
  box-sizing: border-box

h6
  font-weight: bold
  display: block
  margin: 0
  border-bottom: 1px solid #e5e5e5
  background-color: rgba(255, 255, 255, 0.25)

sup, sub
  display: inline-block
  font-weight: bold
  text-align: center

.btns
  text-align: center
  span
    margin: 0 6px

.form
  a,
  .btn
    margin: 4px 2px

