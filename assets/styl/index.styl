@import "./_anime.styl"
@import "./_tooltip.styl"
@import "./_chat.styl"
@import "./_frame.styl"

.page-enter-active,
.page-leave-active
  transition: opacity .7s

.page-enter,
.page-leave-active
  opacity: 0

input[type=color],
input[type=checkbox],
input[type=radio],
input[type=submit],
input[type=button],
input[type=image],
input[type=reset],
[title], [data-tooltip],
a, b, em, strong, kbd, code,
input, select, button, textarea,
.btn
  display: inline-block
  user-select: none
  box-sizing: border-box
  vertical-align: baseline
  text-decoration: none
  margin:    0   2px
  padding:   2px
  border-radius: 3px
  border-width:  0
  border-style: outset
  align-items: flex-start
  cursor: hand

  text-rendering: auto
  letter-spacing: normal
  word-spacing: normal
  text-transform: none
  text-shadow:    none
  text-indent: 0px

.pull-left
  float: left
.pull-right
  float: right

th, td
  border-radius: 2px

strong,
th,
b
  font-weight: normal

span
  display: inline-block

del
  text-decoration: none

em
  font-style: normal

pre
  margin: 0 -4px

li
  margin:  0
  padding: 0

ol, ul
  margin:  0
  padding: 0 0 0 4ex
ol
  list-style-type: circle
ul
  list-style-type: decimal


abbr,
input,
select,
button,
textarea
  user-select: auto
  padding: 4px

label,
rt,
sup,
sub
  padding: 0 4px

label,
abbr,
rt,
sup,
sub
  border-radius: 3em
  padding: 1px 6px
  text-align: center

h1, h2, h3, h4, h5, h6
  box-sizing: border-box
  display: block
  font-weight: normal
  margin: 0

blockquote
  margin:  0
  padding: 2px 0 2px 0.5ex
  border-style: none none none solid
  border-width: 0 0 0 0.5ex

sup, sub
  display: inline-block
  text-align: center

.chat
  box-sizing: border-box
  display: block

.btns,
.top-btns
  text-align: center
  span
    margin: 0 6px

.form
  a,
  .btn
    margin: 4px 2px

hr
  clear: both
  height:  5px
  margin:  0
  -webkit-margin-before: 0
  -webkit-margin-after:  0
  border: none

hr:before
  content: ""
  display: block
  height: 3px
  margin:  0
  padding: 0
  border-style: solid none dashed none
  border-top: 1px solid
  border-bottom: 1px dashed
