@import "./_width.styl"

inline($base, $inline, $family)
  font-family: $family
  font-size:   $base
  line-height: $inline

font($small, $base, $family)
  $middle = ($small + $base) / 2
  $pad    = $base / 3
  $block  = $base * 1.5
  $inline = $base * 1.3

  width($base, 30 * $base + 120)

  sup
    vertical-align: $small *  0.5
    font-size:      $small
    line-height:    $small + 2px

  sub
    vertical-align: $small * -0.5
    font-size:      $small
    line-height:    $small + 2px

  body,
  .btns,
  .links,
  .chat .name
    inline($base,  $block,  $family)
    dfn,
    abbr,
    input,
    select,
    button,
    textarea,
    time,
    a,
    b,
    p
      inline($base,  $block,  $family)

  .chat .text
    inline($base,  $inline, $family)
    dfn,
    abbr,
    input,
    select,
    button,
    textarea,
    time,
    a,
    b,
    p
      inline($base,  $inline, $family)

  h6
    padding: $pad

  h6,
  .fine,
  .chrblank,
  .chat .date
    inline($small, $middle, $family)
    dfn,
    abbr,
    input,
    select,
    button,
    textarea,
    time,
    a,
    b,
    p
      inline($small, $middle, $family)

  code,
  kbd,
  .swipe table td,
  .swipe table th
    inline($small, $middle, $family)


