@import "./_theme.styl"
@import "./_theme_film.styl"

$border = #333

hr
  margin: 0
  border-style: none none solid none
  border-bottom: 1px dashed

palette(pens,    foot)
palette(stats,   foot)
palette(world,   foot)
palette(says,   night)

.talk
  .chat
    border-style: none none solid solid
    border-width: 0 0 1px 3px
    margin:  0 7px 0 -3px

.post
  border-style: none none solid solid
  border-width: 0 0 1px 18px

.contentframe
  background-color: #301
  .talk
    .baloon
      left:  -9px
      border-right-width 1px

body
  background-position-x: right
  background-position-y: top
  background-attachment: fixed
  background-repeat: no-repeat
  background-image: url("http://s3-ap-northeast-1.amazonaws.com/giji-assets/images/bg/moon-red.png")
  background-color: #220005

.filmend
  background-image: url("http://s3-ap-northeast-1.amazonaws.com/giji-assets/images/bg/film-end.png")
