@import "./tooltip.styl"

.page-enter-active, .page-leave-active
  transition: opacity .5s

.page-enter, .page-leave-active
  opacity: 0

html,
body,
p
  margin: 0


b
  font-weight: bold

input[type=color],
input[type=checkbox],
input[type=radio],
input[type='submit'],
input[type='button'],
input[type='image'],
input[type='reset'],
a, b, kbd, code, input, select, button, textarea,
[title], [data-tooltip],
.btn
  display: inline-block
  user-select: none
  box-sizing: border-box
  vertical-align: baseline
  text-align: center
  text-decoration: none
  margin:    4px 2px
  padding:   2px
  border-radius: 3px
  border-width:  0
  border-style: outset
  align-items: flex-start
  cursor: hand

  text-rendering: auto
  letter-spacing: normal
  word-spacing: normal
  text-transform: none
  text-shadow:    none
  text-indent: 0px

.contentframe,
.outframe,
.inframe
  box-sizing: content-box


h1, h2, h3, h4, h5, h6, .chat
  box-sizing: border-box

h6
  font-weight: bold
  display: block
  margin: 0
  padding: 0.10rem 0.25rem
  border-bottom: 1px solid #e5e5e5
  background-color: rgba(255, 255, 255, 0.25)

sup
  vertical-align:   10px

sub
  vertical-align:  -10px

sup, sub
  margin-right:      0px
  padding: 2px 6px 0 6px
  display: inline-block
  font-weight: bold
  text-align: center

.chat
  padding: 0 4px
  .name
    font-weight: bold

  .text
    overflow:   visible
    word-wrap:  break-word
    word-break: break-strict
    &.head:first-line
      font-weight: bold
    &.mono
      font-family: monospace
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis

  .date
    text-align: right

.btns
  span
    margin: 0 6px





