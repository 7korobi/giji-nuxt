b
  font-weight: bold

input[type=color],
input[type=checkbox],
input[type=radio],
input[type='submit'],
input[type='button'],
input[type='image'],
input[type='reset'],
a, b, kbd, code, input, select, button, textarea,
[title], [data-tooltip],
.btn
  display: inline-block
  user-select: none
  box-sizing: border-box
  vertical-align: baseline
  text-align: center
  text-decoration: none
  margin:    4px 2px
  padding:   2px
  border-radius: 3px
  border-width:  0
  border-style: outset
  align-items: flex-start
  cursor: hand

  text-rendering: auto
  letter-spacing: normal
  word-spacing: normal
  text-transform: none
  text-shadow:    none
  text-indent: 0px

.contentframe,
.outframe,
.inframe
  box-sizing: content-box


h1, h2, h3, h4, h5, h6, .chat
  box-sizing: border-box

h6
  font-weight: bold
  display: block
  margin: 0
  padding: 0.10em 0.25em
  line-height: 1em
  border-bottom: 1px solid #e5e5e5
  background-color: rgba(255, 255, 255, 0.25)

sup
  vertical-align:   10px

sub
  vertical-align:  -10px

sup, sub
  border-radius:     7px
  font-size:        12px
  line-height:      14px
  height:           14px
  margin-right:      0px
  padding: 2px 6px 0 6px
  display: inline-block
  font-weight: bold
  text-align: center

.chat
  padding: 0 4px
  .name
    color: $emboss
    font-weight: bold
    line-height: 1.3em

  .text
    line-height: 1.2em
    overflow:   visible
    word-wrap:  break-word
    word-break: break-strict
    &.head:first-line
      font-weight: bold
    &.mono
      font-family: monospace
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis

  .date
    color: $emboss
    text-align: right
    font-size: 10.5px
    line-height: 1.1em

.btns
  line-height: 30px
  span
    margin: 0 6px





