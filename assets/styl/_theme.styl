palette($bgTheme, $backTheme, $pen)
  $border = #333
  if glass == $backTheme
    $border = o[$bgTheme]
    $emboss = alpha($border, 0.7)
    $bg = alpha(complement($border), 0.2)
    if SSAY == $bgTheme
      $border = #ccc
    $pen = mix($border, $pen, 40%)

  if light == $backTheme
    $bg = o[$bgTheme]
    $pen = mix($bg, $pen, 40%)
    $emboss = darken($bg, 40%)

  if white == $backTheme
    $bg = o[$bgTheme]
    $emboss = darken($bg, 40%)

  if black == $backTheme
    $bg = o[$bgTheme]
    $emboss = darken($bg, 40%)

  .{$bgTheme}
    theme-block($pen, $bg, $emboss, $border)
    theme-mark($pen, $bg, $emboss, $border)



theme-block($pen, $bg, $emboss, $border)
  color:           $pen
  background-color: $bg
  border-color: $border

  textarea
    background-color: $bg
    border-color: $border

  .name, .date, strong
    color:        $emboss
    border-color: $border

  sup, sub
    color:                $bg
    border-color:     $border
    background-color: $emboss


theme-mark($pen, $bg, $emboss, $border)
  $mark = lighten($bg, 20%)
  $bold = lighten($pen, 30%)
  $spot = lighten($bg, 50%)

  $on  = mix($mark, green, 90%)
  $off = mix($mark, blue,  90%)

  b
    color: $bold

  a, button,
  [title], [data-tooltip],
  input[type=checkbox],
  input[type=radio],
  input[type=color],
  input[type=image],
  input[type=button],
  input[type=submit],
  input[type=reset]
    color: $pen

  a, b, button,
  [title], [data-tooltip],
  input[type=checkbox],
  input[type=radio],
  input[type=color],
  input[type=image],
  input[type=button],
  input[type=submit],
  input[type=reset]
    background: $mark
    &:hover, &:focus
      background: $bg
      box-shadow:
        0 0 20px 3px $spot inset
    &.active,
    &:active
      background: $bg
      box-shadow:
        0 0 20px 3px $emboss inset

  input[type=checkbox],
  input[type=radio]
    &:checked
      background: $on

  a[href]
    &:link
      color: $pen
      background: $off
    &:visited
      color: $pen
      background: $on

