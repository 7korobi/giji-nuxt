palette($themes, $backT)
  for key, $bgTheme in themes[$themes]
    palette_single($bgTheme, $backT, spins[key], reds[key])


palette_single($bgTheme, $backT, $spin, $red)
  if foot == $backT
    $edge = $baloon = spin( $red.light, $spin )

    $hide = $emboss = spin( $red.pen, $spin )
    $off = $active = spin( $red.pen, $spin - 18deg )
    $on = $focus = spin( $red.pen, $spin + 18deg )

    $bg = spin( $red.emboss, $spin )
    $bgHi = spin( $red.pen, $spin )

    $pen = spin( $red.light, $spin )

    $good = spin( $red.light, spins.ALIEN )
    $warn = spin( $red.light, spins.P01 )
    $good = spin( $red.light, spins.WOLF )

  if light == $backT
    $hide = spin( $red.pen, $spin )

    $emboss = $edge = spin( $red.emboss, $spin )
    $off = $active = spin( $red.emboss, $spin - 18deg )
    $on = $focus = spin( $red.emboss, $spin + 18deg )

    $bgHi = spin( $red.high, $spin )
    $bg = $baloon = spin( $red.light, $spin )

    $pen = dark

    $good = spin( $red.black, spins.ALIEN )
    $warn = spin( $red.black, spins.P01 )
    $good = spin( $red.black, spins.WOLF )

  if night == $backT
    $edge = $baloon = spin( $red.primary, $spin )

    $hide = $emboss = spin( $red.emboss, $spin )
    $off = $active = spin( $red.emboss, $spin - 18deg )
    $on = $focus = spin( $red.emboss, $spin + 18deg )

    $bg = spin( $red.black, $spin + 180deg )
    $bgHi = dark

    $pen = spin( $red.high, $spin )

    $good = spin( $red.primary, spins.ALIEN )
    $warn = spin( $red.primary, spins.P01 )
    $ban  = spin( $red.primary, spins.WOLF )

  if black == $backT
    $edge = $baloon = spin( $red.primary, $spin )

    $hide = $emboss = spin( $red.emboss, $spin )
    $off = $active = spin( $red.emboss, $spin - 18deg )
    $on = $focus = spin( $red.emboss, $spin + 18deg )

    $bg = spin( $red.black, $spin )
    $bgHi = dark

    $pen = spin( reds.SILVER.light, 0 )

    $good = spin( $red.primary, spins.ALIEN )
    $warn = spin( $red.primary, spins.P01 )
    $ban  = spin( $red.primary, spins.WOLF )

  {$bgTheme}
    &,
    textarea
      color:            $pen
      background-color: $bg
      border-color:     $edge

    &.baloon
      border-color: $baloon

    .fa-check
      color: $good
    .fa-warning
      color: $warn
    .fa-ban
      color: $ban

    [title],
    [data-tooltip]
      background-color: $bgHi

    [title]:before,
    [title]:after,
    [data-tooltip]:before,
    [data-tooltip]:after
      color:            $pen
      background-color: $bgHi

    .name,
    a:not([name])
      sup,
      sub
        background-color: $emboss
        color: $bgHi

    b
      color: $pen
      background-color: $bgHi

    body a:not([name])&,
    a:not([name])
      color: $pen
      &:visited
        background-color: $on
      &:link
        background-color: $off

    .active
      background-color: $active

    input,
    button,
    body a:not([name])&,
    a:not([name])
      background-color: $bgHi
      &:hover,
      &:focus
        background-color: $focus
      &.nuxt-link-exact-active,
      &.active,
      .nuxt-link-exact-active,
      .active
        background-color: $active

    input[type=checkbox],
    input[type=radio]
      background-color: $off
      &:checked
        background-color: $on

    .name,
    .date
      color: $hide
    
    del
      text-decoration: none
      color: $hide

    h5,
    rt,
    abbr,
    strong
      background-color: $emboss
      color: $bgHi


