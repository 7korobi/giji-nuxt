palette($themes, $backT, $penT, $border)
  for key, $bgTheme in themes[$themes]
    $base = colors[key]
    $comp = spin($base, 180deg)
    if glass == $backT
      $bg =     mix($comp,  dark, 10%)
      $pen =    mix($base, $penT, 75%)
      $emboss = mix($base, $penT, 50%)
      $bold =   mix($base, $penT, 50%)
      $button = dark
      $border = $pen

    if light == $backT
      $bg =     mix($base, silver, 25%)
      $pen =    mix($base,  $penT, 35%)
      $emboss = mix($base,  $penT, 40%)
      $bold =   mix($base,  $penT, 40%)
      $button = mix($base, silver, 33%)

    if silver == $backT
      $bg =     mix($base, silver, 25%)
      $pen =    mix($comp,  $penT, 15%)
      $emboss = mix($base,  $penT, 40%)
      $bold =   mix($base,  $penT, 40%)
      $button = mix($base, silver, 33%)


    if black == $backT
      $bg = $base
      $pen = $penT
      $emboss = mix($base,  light, 80%)
      $bold =   mix($base,  light, 80%)
      $button = mix($base, silver, 80%)

    {$bgTheme}
      theme-block($pen, $bg, $emboss, $border)
      theme-mark($pen, $bg, $emboss, $bold, $button, $border)



theme-block($pen, $bg, $emboss, $border)
  color:           $pen
  background-color: $bg
  border-color: $border

  textarea
    background-color: $bg
    border-color: $border

  .name, .date, strong
    color:        $emboss
    border-color: $border

  em
    color: $emboss

  sup, sub
    color:                $bg
    border-color:     $border
    background-color: $emboss


theme-mark($pen, $bg, $emboss, $bold, $button, $border)
  $on   = mix($bg, green, 80%)
  $off  = mix($bg, blue,  80%)

  b
    color: $bold

  a, button,
  [title], [data-tooltip],
  input[type=checkbox],
  input[type=radio],
  input[type=color],
  input[type=image],
  input[type=button],
  input[type=submit],
  input[type=reset]
    color: $pen

  input,
  textarea
    background: $button

  a, b, button,
  [title], [data-tooltip],
  input[type=checkbox],
  input[type=radio],
  input[type=color],
  input[type=image],
  input[type=button],
  input[type=submit],
  input[type=reset]
    background: $button
    &:hover, &:focus
      background: $bg
      box-shadow:
        0 0 20px 3px $bold inset
    &.active,
    &:active
      background: $bg
      box-shadow:
        0 0 20px 3px $emboss inset

  input[type=checkbox],
  input[type=radio]
    background: $off
    &:checked
      background: $on

  a[href]
    &:link
      color: $pen
      background: $off
    &:visited
      color: $pen
      background: $on

