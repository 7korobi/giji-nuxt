
width($font, $center)
  $gap = 24px
  $limit1 = $center / 0.9
  $limit2 = $center + 2 * ( $gap + 80px )
  $limit3 = $center + 2 * ( $gap + $font * 9 )
  $half   = ( $center + $gap ) / 2

  .writeframe,
  .outframe
    width: 100%

  @media screen and (min-width: $limit3)
    .summary
      width: "calc( 50% - %s )" % $half
  @media screen and (max-width: $limit3)
    .summary
      width: $font * 9

  @media screen and (min-width: $limit2)
    .currentframe,
    .sideframe
      width: "calc( 50% - %s )" % $half
  @media screen and (max-width: $limit2)
    .currentframe
      width: "calc( 50% - %s )" % $half
    .sideframe
      width: 80px

  @media screen and (min-width: $limit1)
    .writeframe,
    .outframe
      .contentframe
        width: $center
        margin: 0 auto
    .summary:hover
      width: "calc( 50% + %s )" % $half

  @media screen and (max-width: $limit1)
    .writeframe,
    .outframe
      .contentframe
        margin: 0 5%
    .summary:hover
      width: "calc( 100% - %s )" % 50px
