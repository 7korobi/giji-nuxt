

@keyframes bg-cradlle
  0%
    background-position:  left  top
  100%
    background-position: right  top


@keyframes bg-pulse
  0%
    background-size: 100vw 10px
  100%
    background-size: 120vw 10px


@keyframes bg-pulse-fire
  0%
    background-size: 100vw 10px
  7%
    background-size: 115vw 10px
  28%
    background-size: 103vw 10px
  33%
    background-size: 120vw 10px
  44%
    background-size: 115vw 10px
  50%
    background-size: 120vw 10px
  67%
    background-size: 100vw 10px
  78%
    background-size: 106vw 10px
  81%
    background-size: 100vw 10px
  100%
    background-size: 110vw 10px


@keyframes border-hover
  0%    { border-radius: 1em }
  80%   { border-radius: 0   }
  100%  { border-radius: 1em }

@keyframes border-shake
  0%    { border-radius: 1em 3px 3px 3px / 3px 3px 1em 3px }
  25%   { border-radius: 3px 3px 1em 3px / 1em 3px 3px 3px }
  50%   { border-radius: 3px 1em 3px 3px / 3px 3px 3px 1em }
  75%   { border-radius: 3px 3px 3px 1em / 3px 1em 3px 3px }


*
  transition-property: background-color, border-color, width
  transition-duration: .3s

.expand-transition
  transition: all .2s ease

.icons,
.list
  &-move
    transition: transform 0.3s
  &-enter-to
    transition: all 0.2s ease 0.1s
  &-enter, &-leave-to
    opacity: 0
  &-leave-to
    position: absolute


.timeline
  &-enter, &leave-to
    opacity: 0
    transition: all 0.2s ease 0.1s

.portrates
  background: #000
  padding: 2px
  display: flex
  flex-direction:  row
  flex-wrap:       wrap
  align-items:     center
  align-content:   space-around
  justify-content: space-around

  .portrate
    flex-basis: auto

  .expand-enter,
  .expand-leave
    height: 0
    padding: 0 10px
    opacity: 0

  .list-leave-to
    position: absolute

  .list-enter,
  .list-leave-to
    transform: translateY(30px)

