

@keyframes border-hover
  0%    { border-radius: 1em 3px 3px 3px / 3px 3px 1em 3px }
  25%   { border-radius: 3px 3px 1em 3px / 1em 3px 3px 3px }
  50%   { border-radius: 3px 1em 3px 3px / 3px 3px 3px 1em }
  75%   { border-radius: 3px 3px 3px 1em / 3px 1em 3px 3px }


.page-enter-active,
.page-leave-active
  transition: color      .2s
  transition: background .2s

*
  transition: background-color .9s
  transition: border-color     .9s

.expand-transition
  transition: all .2s ease

.icons,
.list
  &-move
    transition: transform 0.3s
  &-enter-to
    transition: all 0.2s ease 0.1s
  &-enter, &-leave-to
    opacity: 0
  &-leave-to
    position: absolute


.timeline
  &-enter, &leave-to
    opacity: 0
    transition: all 0.2s ease 0.1s

.portrates
  background: #000
  padding: 2px
  display: flex
  flex-direction:  row
  flex-wrap:       wrap
  align-items:     center
  align-content:   space-around
  justify-content: space-around

  .portrate
    flex-basis: auto

  .expand-enter,
  .expand-leave
    height: 0
    padding: 0 10px
    opacity: 0

  .list-leave-to
    position: absolute

  .list-enter,
  .list-leave-to
    transform: translateY(30px)

